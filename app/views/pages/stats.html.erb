<div class="container justify-content-between">
  <div class="row">
    <div class="col">
      <div class="stats-list">
        <div class="card-product">
          <i class="far fa-comments"></i>
          <div class="card-product-infos">
            <h2><%= @comments_received_number %></h2>
            <p>Comments received</p>
          </div>
        </div>

        <div class="card-product">
          <i class="far fa-thumbs-up"></i>
          <div class="card-product-infos">
            <h2><%= @comments_given_number %></h2>
            <p>Comments given</p>
          </div>
        </div>

        <div class="card-product">
          <i class="fas fa-video"></i>
          <div class="card-product-infos">
            <h2><%= @recordings_number_speaker %></h2>
            <p>Sessions as speaker</p>
          </div>
        </div>

        <div class="card-product">
          <i class="fas fa-users"></i>
          <div class="card-product-infos">
            <h2><%= @recordings_number_observer %></h2>
            <p>Sessions as observer</p>
          </div>
        </div>
      </div>
    </div>
    <div class="col">
      <div id="chart"
           data-reviews="<%= @reviews_type_count.to_json %>">
        <canvas id="myChart" width="400" height="400"></canvas>
      </div>
    </div>
  </div>
</div>



