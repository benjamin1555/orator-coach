        <!-- Display when navbar is collapsed -->
        <%= link_to "New speech", new_recording_path, class: "nav-link green-link mx-4 dropdown-new-recording", confirm: "Launch new speech recording" %>
        <%= link_to "Dashboard", dashboard_path, class: "nav-link green-link mx-4 navbar-dropdown-show" %>
        <%= link_to "MyStats", stats_path, class: "nav-link green-link mx-4 navbar-dropdown-show" %>
        <%= link_to "Library", library_path, class: "nav-link green-link mx-4 mr-5 navbar-dropdown-show" %>
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link green-link mx-4 navbar-dropdown-show" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "nav-link green-link mx-4 navbar-dropdown-show" %>
        <% end %>

        <!-- Login button -->
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%= image_tag "mathieu.jpg", class: "avatar dropdown-toggle navbar-avatar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item login-btn">
              <%= link_to "Login", new_user_session_path, class: "nav-link login" %>
            </li>
          <% end %>
        </ul>

      </div>

    </div>

