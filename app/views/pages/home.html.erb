      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-bars navbar-button"></i>
      </button>

    <!-- Right section div -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <!-- Navigation links -->

        <!-- Display when navbar is expanded -->
        <span class="navbar-hidden">
          <%= link_to(new_recording_path, class: "green-button-home mx-4", confirm: "Launch new speech recording") do %>
              <i class="fas fa-plus"></i> <span>New speech</span>
