<div class="container new-recording">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-md-8 col-lg-4 d-flex flex-column align-items-center">
      <h3 class="text-center">FINAL COMMENT</h3>
      <div class="recording-choice" id="list-of-review-types">

        <%= simple_form_for @observer do |f| %>
          <%= f.input :final_review, label: false, placeholder: "What did you think about the speaker's performance?", class: "text-field" %>
          <%= f.submit "Validate feedback", class: "recording-btn" %>
        <% end %>

      </div>
    </div>
  </div>
</div>

