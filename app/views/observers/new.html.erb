<div class="container new-review">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-md-8 col-lg-4 d-flex flex-column align-items-center">

      <h3 class="text-center">ENTER SPEECH ACCESS KEY</h3>
      <div class="recording-choice" id="enter-speech-password" data-sweet=<%= @sweet %>>

        <%= simple_form_for @observer do |f| %>
          <%= f.input :client_key, label: false, placeholder: "Enter access key", input_html: {value: ''} %>
          <%= f.submit "Join speech", class: "review-btn", id: "submitButton" %>
        <% end %>

      </div>
    </div>
  </div>
</div>

