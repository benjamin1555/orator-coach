<style>.navbar{display: none}</style>


<div class="grid-container new-review">
  <div class="new-review">

    <!-- <h1 class="text-center">LIVE FEEDBACK</h1> -->

      <div class="review-choice" id="list-of-review-types" data-sweet=<%= @sweet %>>
        <%= simple_form_for([@observer, @review], remote: true) do |f| %>

          <div class="reviews-grid">
            <i class="far fa-thumbs-down"></i>
            <i class="far fa-thumbs-up"></i>
            <div class="relative btn-div">
              <%= f.submit "Speak slower", class: "review-btn my-2", id: "speak_slower" %>
              <span class="badge-count"></span>
            </div>
            <div class="relative btn-div">
              <%= f.submit "Great pace", class: "review-btn my-2", id: "great_pace" %>
              <span class="badge-count"></span>
            </div>
            <div class="relative btn-div">
              <%= f.submit "Speak louder", class: "review-btn my-2", id: "speak_louder" %>
              <span class="badge-count"></span>
            </div>
            <div class="relative btn-div">
              <%= f.submit "Great tone", class: "review-btn my-2", id: "great_tone" %>
              <span class="badge-count"></span>
            </div>
            <div class="relative btn-div">
              <%= f.submit "Look at us", class: "review-btn my-2", id: "look_at_us" %>
              <span class="badge-count"></span>
            </div>
            <div class="relative btn-div">
              <%= f.submit "Good eye contact", class: "review-btn my-2", id: "eye_contact" %>
              <span class="badge-count"></span>
            </div>
            <div class="relative btn-div">
              <%= f.submit "Stay still", class: "review-btn my-2", id: "stay_still" %>
              <span class="badge-count"></span>
            </div>
            <div class="relative btn-div">
              <%= f.submit "Good gesture", class: "review-btn my-2", id: "good_gesture" %>
              <span class="badge-count"></span>
            </div>
            <div class="relative btn-div">
              <%= f.submit "Smile", class: "review-btn my-2", id: "smile" %>
              <span class="badge-count"></span>
            </div>
            <div class="relative btn-div">
              <%= f.submit "Nice smile", class: "review-btn my-2", id: "nice_smile" %>
              <span class="badge-count"></span>
            </div>
          </div>

          <div class="review-choice d-flex justify-content-center">
            <%= link_to "TERMINATE ", final_review_observer_path(@observer), class: "d-flex validation-btn justify-content-center align-items-center", id: "final-review-button" %>
          </div>

        <% end %>
      </div>


  </div>
</div>

