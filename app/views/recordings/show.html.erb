<div class="container show-recording">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-md-8 col-lg-4 d-flex flex-column align-items-center">
      <h3 id="title" class="text-center">ACCESS KEY</h3>

      <div id="access_key" class="recording-key">
        <%= @recording.access_key %>
      </div>
      
      <button id="btn-to-pending" class="recording-validation text-center">âœ“</button>
      <button id="btn-start"><i class="far fa-play-circle fa-3x"></i></button>
      <button id="btn-stop"><i class="far fa-stop-circle fa-3x"></i></button>
      <video controls id="record-video"></video>

      <%= form_for(@recording) do |f| %>
        <span id='recording-id' data-id='<%= @recording.id %>'></span>
        <%#= f.text_field :video %>
        <input type="file" id="recording_video" name="recording[video]">
        <%= f.submit "Go to dashboard", id: "dashboard-back", class: "justify-content-center align-items-center recording-btn" %>
      <% end %>
      
    </div>
  </div>
</div>
